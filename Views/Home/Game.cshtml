@{
    ViewData["Title"] = "Game";
}

<head>
    <script src="~/js/site.js"></script>
</head>

<div class="text-center">
    <h1>Rock Paper andScissor Game!</h1>
    <div class="PlayerHand">
        <p id="PlayerHand">P1</p>
        <img id="PlayerHandImage"></image>
        <p id="PlayerPoint"></p>
    </div>
    <div class="OpponentHand">
        <p id="OpponentHand">P2</p>
        <img id="OpponentHandImage"></image>
        <p id="EnemyPoint"></p>
    </div>
    <div class="HandSelection">
        <button id="Rock" onClick="RockOnClick('Rock')">Rock</button>
        <button id="Paper" onClick="RockOnClick('Paper')">Paper</button>
        <button id="Scissor" onClick="RockOnClick('Scissor')">Scissor</button>
    </div>
    <div class="GameStatus">
        <p id="GameStatus"></p>
    </div>
</div>